#include <stdio.h>
int imprime (char var, int x) {
    int total=0;
    for (int l=1; l<=x; l++){
        for (int c=1; c<=l; c++){
            printf ("%c", var);
            total += 1;
        }
        printf ("\n");
    }
    return total;
}

int main() {
    int qtde;
    qtde = imprime ('/',5);
    
    printf ("Foram impressos %d caracteres no primeiro e %d no segundo", qtde, imprime ('!',6) );
    return 0;
}
